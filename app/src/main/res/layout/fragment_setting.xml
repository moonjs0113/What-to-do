<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="70sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="최우선 color"
            android:layout_margin="5sp"
            android:textStyle="bold"
            android:textSize="13sp"
            />

        <Button
            android:id="@+id/changeColor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="색상 바꾸기"
            android:layout_margin="5sp"
            android:textColor="@color/black"
            >
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="70sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="중요 color"
            android:layout_margin="5sp"
            android:textStyle="bold"
            android:textSize="13sp"
            />

        <Button
            android:id="@+id/changeColor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="색상 바꾸기"
            android:layout_margin="5sp"
            android:textColor="@color/black"
            >
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="70sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="여유 color"
            android:layout_margin="5sp"
            android:textStyle="bold"
            android:textSize="13sp"
            />

        <Button
            android:id="@+id/changeColor3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="색상 바꾸기"
            android:layout_margin="5sp"
            android:textColor="@color/black"
            >
        </Button>

    </LinearLayout>

    <Button
        android:id="@+id/changeCal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="중요도 공식 바꾸기"
        android:background="@drawable/button_style"
        android:textColor="@color/black"
        android:layout_margin="15dp"
        >
    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="중요도 단계가 최우선인 ToDo의 알림을 받으시겠습니까?"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:textSize="15sp"
        />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginRight="30sp"
        android:layout_marginBottom="5sp"
        >
        <RadioButton
            android:id="@+id/alramOk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="알림 수신"
            android:layout_marginRight="15sp"
            android:textSize="12sp"
            android:checked="true"
            >
        </RadioButton>

        <RadioButton
            android:id="@+id/alramNo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10sp"
            android:text="알림 거절"
            android:textSize="12sp"
            >
        </RadioButton>

    </RadioGroup>

    <Button
        android:id="@+id/deleteComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="완료된 할 일 지우기"
        android:background="@drawable/button_style"
        android:textColor="@color/black"
        android:layout_margin="15dp"
        >
    </Button>

    <Button
        android:id="@+id/Initialize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="앱 초기화"
        android:background="@drawable/button_style"
        android:textColor="@color/black"
        android:layout_margin="15dp"
        >
    </Button>

</LinearLayout>