<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">17sp</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/register</item>
        <item name="colorControlActivated">@color/register</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
    </style>
    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/register</item>
    </style>
    <style name="DatePickerTheme.buttonBarPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/register</item>
    </style>

    <style name="MyTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/register</item>
        <item name="colorControlActivated">@color/register</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
    </style>

    <style name="completeSwitch" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlActivated">@color/pickButtonBackground</item>
        <item name="colorSwitchThumbNormal">@color/buttonBackground</item>
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

</resources>